@model MyProject.ViewModel.FruitViewModel



<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.Fruits[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruits[0].ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruits[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruits[0].IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fruits[0].BuyDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Fruits)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@item.ImagePath" width="200" height="200" />
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" data-id="@item.Id" class="my_edit">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

