@model MyProject.Models.Fruits

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">

    <h1 class="text-danger">@ViewData["Title"]</h1>
    <h3>Are you sure you want to delete this fruit and its sales?</h3>

    <div class="card shadow-lg rounded-3 mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.Name Details</h4>
        </div>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3 fw-bold">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">Image:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="/@Model.ImagePath" alt="@Model.Name" class="img-fluid rounded" style="max-height:150px;" />
                    }
                    else
                    {
                        <span class="text-muted fst-italic">No Image</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">Price:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3 fw-bold">Status:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Out of Stock</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-bold">Buy Date:</dt>
                <dd class="col-sm-9">@Model.BuyDate.ToShortDateString()</dd>
            </dl>

            <hr />

            <h5 class="fw-bold">Fruit Sales</h5>
            @if (Model.FruitsSales != null && Model.FruitsSales.Any())
            {
                <table class="table table-bordered table-striped mt-2">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Sales Amount</th>
                            <th>UOM</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.FruitsSales.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.FruitsSales[i].SalesAmount</td>
                                <td>@Model.FruitsSales[i].UOM</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic">No sales available.</p>
            }

        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Fruit
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
